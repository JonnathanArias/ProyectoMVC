@{
    ViewData["Title"] = "Usuario";
    
}



<!DOCTYPE html>
<html lang="es">


    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Creación de Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background-color: #222;
            position: fixed;
            left: 0;
            top: 55px;
            width: 250px;
            height: 100vh;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
        }

            .sidebar h4 {
                color: white;
                margin-bottom: 20px;
            }

            .sidebar button {
                width: 100%;
                margin-bottom: 10px;
                padding: 10px;
            }

       
    </style>


</head>

<body>

 
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 sidebar d-flex flex-column align-items-center">
                <h4 style="color: white;">Jonnathan Arias</h4>
                <p style="color:white">Administrador</p>
                <button class="btn btn-outline-light">Creación de Usuario</button>
                <button class="btn btn-outline-light">Inventarios de Stock</button>
                <button class="btn btn-outline-light">Creación Incidentes</button>
                <button class="btn btn-outline-light">Control de Accesos</button>
            </nav>

   
            
            <!-- Contenido Principal -->
            <main class="col-md-9 col-lg-10 p-4">
                <h2>Creación de Usuario</h2>
                <form asp-action="Crear" asp-controller="Usuario" method="post" class="row g-3">
                    <div class="col-md-4">
                        <label for="documento" class="form-label">Número de documento</label>
                        <input type="text" class="form-control" id="documento">
                    </div>
                    <div class="col-md-4">
                        <label for="nombres" class="form-label">Nombres</label>
                        <input type="text" class="form-control" id="nombres">
                    </div>
                    <div class="col-md-4">
                        <label for="apellidos" class="form-label">Apellidos</label>
                        <input type="text" class="form-control" id="apellidos">
                    </div>
                    <div class="col-md-4">
                        <label for="correo" class="form-label">Correo</label>
                        <input type="email" class="form-control" id="correo">
                    </div>
                    <div class="col-md-4">
                        <label for="contraseña" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="contraseña">
                    </div>

                    <div class="col-md-4">
                        <label for="rol" class="form-label">Rol</label>
                        <select class="form-select" id="rol">
                            <option value="Admin">Admin</option>
                            <option value="Usuario">Usuario</option>
                            <!-- Puedes agregar más roles aquí si es necesario -->
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label for="ciudad" class="form-label">Ciudad</label>
                        <input type="text" class="form-control" id="ciudad">
                    </div>
                    <div class="col-md-4">
                        <label for="usuario" class="form-label">Usuario de red</label>
                        <input type="text" class="form-control" id="usuario">
                    </div>
                    <div class="col-md-4">
                        <label for="fecha" class="form-label">Fecha de creación</label>
                        <input type="date" class="form-control" id="fecha">
                    </div>
                   
                    <div class="col-md-4">
                        <label for="estado" class="form-label">Estado</label>
                        <select class="form-select" id="estado">
                            <option>Activo</option>
                            <option>Inactivo</option>
                        </select>
                    </div>

                  
                    <div class="col-12 text-end">
                        <!-- Botón Crear (envía el formulario actual) -->
                        <button type="submit" class="btn btn-success">Crear Usuario</button>
                  
                        <!-- Botón Eliminar (debe estar solo cuando se edita un usuario existente) -->
                        <button type="button"
                                class="btn btn-danger"
                                onclick="confirmarEliminacion()">
                            Eliminar Usuario
                        </button>

                        <!-- Botón Actualizar (alternativa al submit para edición) -->
                        <button type="button"
                                class="btn btn-warning"
                                onclick="enviarFormulario('editar')">
                            Actualizar Usuario
                        </button>
                    </div>
                </form>
                <h4 class="mt-4">Consulta de Usuarios</h4>
                <div class="table-responsive">
                    <table id="tblDatos" class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>DOCUMENTO</th>
                                <th>NOMBRES</th>
                                <th>APELLIDOS</th>
                                <th>CORREO</th>
                                <th>CORREO</th>
                                <th>CONTRASEÑA</th>
                                <th>USUARIO DE RED</th>
                                <th>ROL</th>
                                <th>CIUDAD</th>
                                <th>USUARIO DE RED</th>
                                <th>FECHA DE CREACIÓN</th>
                                <th>ESTADO</th>
                                <th>ACCIONES</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Datos dinámicos aquí -->
                        </tbody>
                    </table>
                </div>
            </main>

      
        </div>
              
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

@section Scripts {
    <script src="~/js/usuario.js"></script>
}
